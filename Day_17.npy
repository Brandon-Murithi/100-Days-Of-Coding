# a 2d array
import numpy as np
matrix = np.array([[1,2],[3,4]])
print(matrix)

#transpose 
print(matrix.T)
#reshape
print(matrix.reshape(4,1))# 4 rows and 1 column

#slicing
print(matrix[0])#first row
print(matrix[:,0])#first column

arr=np.array([1,2,3,4])
